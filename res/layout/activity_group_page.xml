<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        tools:context=".GroupPageActivity" />

    <TextView
        android:id="@+id/group_page_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/group_page_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_page_group_name"
        android:layout_below="@+id/group_page_group_name"
        android:layout_marginTop="16dp"
        android:text="TextView" />

    <Button
        android:id="@+id/group_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="onClickHandler"
        android:layout_alignParentLeft="true"
        android:text="Tasks" />

    <Button
        android:id="@+id/group_find_meeting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/group_task_button"
        android:layout_alignParentLeft="true"
        android:onClick="onClickHandler"
        android:text="Find meeting time" />

    <Button
        android:id="@+id/group_chat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/group_find_meeting_button"
        android:onClick="onClickHandler"
        android:layout_alignParentLeft="true"
        android:text="Group chat" />

</RelativeLayout>
